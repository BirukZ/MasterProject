    public ResultSet selectAllTrainingNames(String trainingCategory) throws SQLException {
        String _selectQuery = " SELECT * FROM HR_LU_TRAIN_TRAINING_TYPES " +
                " WHERE TRAINING_CATEGORY = ? ";
        try {
            _con = getConnection();
            _ps = _con.prepareStatement(_selectQuery);
            _ps.setString(1, trainingCategory);
            _rs = _ps.executeQuery();
            OracleCachedRowSet ocrs = new OracleCachedRowSet();
            ocrs.populate(_rs);
            return (ResultSet) ocrs;
        } finally {
            releaseResources();
        }
    }

    public ResultSet selectAllTrainingNeedSourceTypes() throws SQLException {
        String _selectQuery = " SELECT * FROM HR_LU_TRAIN_TRAINING_REASON ";
        try {
            _con = getConnection();
            _ps = _con.prepareStatement(_selectQuery);
            _rs = _ps.executeQuery();
            OracleCachedRowSet ocrs = new OracleCachedRowSet();
            ocrs.populate(_rs);
            return (ResultSet) ocrs;
        } finally {
            releaseResources();
        }
    }
